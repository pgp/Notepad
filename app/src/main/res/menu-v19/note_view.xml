<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Prev note button -->
    <item
        android:id="@+id/action_prev"
        android:icon="@drawable/ic_arrow_left"
        app:showAsAction="always"
        android:title="@string/action_prev"/>
    <!-- Next note button -->
    <item
        android:id="@+id/action_next"
        android:icon="@drawable/ic_arrow_right"
        app:showAsAction="always"
        android:title="@string/action_next"/>
    <!-- Edit button -->
    <item
        android:id="@+id/action_edit"
        android:icon="@drawable/ic_action_edit"
        app:showAsAction="always"
        android:title="@string/action_edit"/>
    <!-- Delete button -->
    <item
        android:id="@+id/action_delete"
        android:icon="@drawable/ic_action_discard"
        app:showAsAction="always"
        android:title="@string/action_delete"/>
    <!-- Share button -->
    <item
        android:id="@+id/action_share"
        android:icon="@drawable/ic_action_share"
        android:orderInCategory="100"
        app:showAsAction="never"
        android:title="@string/action_share"/>
    <!-- Export button -->
    <item
        android:id="@+id/action_export"
        android:icon="@drawable/ic_action_sd_storage"
        android:orderInCategory="100"
        app:showAsAction="never"
        android:title="@string/action_export"/>
    <!-- Print button -->
    <item
        android:id="@+id/action_print"
        android:orderInCategory="100"
        app:showAsAction="never"
        android:title="@string/action_print"/>
    <!-- Details button -->
    <item
        android:id="@+id/action_details"
        android:orderInCategory="100"
        app:showAsAction="never"
        android:title="@string/action_details"/>

</menu>